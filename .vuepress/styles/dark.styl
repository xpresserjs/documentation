//$vue-color = #0a0a0a
$vue-color = #171c25
$bg-color = $vue-color
$bg-color2 = darken(desaturate(hue($vue-color, 220deg), 50%), 60%);
$MQNarrow = 959px
$MQMobile = 719px
$MQMobileNarrow = 419px

html.use-dark-theme, html.use-dark-theme body
  background-color $bg-color !important
  transition background-color .2s


html.use-dark-theme
  body
    //color: antiquewhite
    color desaturate(lighten($bg-color2, 70%), 50%)

  h4, h5, h6, strong
    color unset

  strong
    color desaturate(navajowhite, 40%) !important

  table
    background-color unset

    tr:nth-child(2n) {
      background-color: lighten($bg-color, 5%);
    }

  strong
    color $accentColor

  .dropdown-title
    color: unset

  .search-box
    input
      border-color desaturate(lighten($bg-color, 30%), 30%)
      background-color $bg-color
      color desaturate(lighten($bg-color, 80%), 50%)

    .suggestions
      background-color desaturate(lighten($bg-color, 15%), 10%)
      border 0

    .suggestion
      a
        color desaturate(lighten($bg-color, 80%), 50%)

      &.focused
        background-color desaturate(lighten($bg-color, 30%), 30%)

        a
          color #fff

  .algolia-search-wrapper
    .algolia-autocomplete
      .ds-dropdown-menu
        border: 0
        background-color desaturate(lighten($bg-color, 15%), 10%)

        &:before
          background-color desaturate(lighten($bg-color, 15%), 10%)
          border: 0;

  @media (min-width: $MQMobile)
    .dropdown-wrapper
      .nav-dropdown
        background-color desaturate(lighten($bg-color, 15%), 10%)
        border 0

        .dropdown-item
          h4
            border-top-color desaturate(lighten($bg-color, 30%), 30%)

  .sw-update-popup
    background-color desaturate(lighten($bg-color, 15%), 10%)
    border 0

  .navbar
    border-bottom-color desaturate(lighten($bg-color, 10%), 10%)
    background-color $bg-color

    .site-name
      color #fff

    .links
      background-color $bg-color

  .page-edit
    .edit-link
      a
        color desaturate(lighten($bg-color, 50%), 50%)

        &:hover,
        &:focus
          color #fff

    .last-updated
      .prefix
        color desaturate(lighten($bg-color, 50%), 50%)

      .time
        color desaturate(lighten($bg-color, 40%), 50%)

  h2
    border-bottom-color desaturate(lighten($bg-color, 10%), 10%)

  hr
    border-top-color desaturate(lighten($bg-color, 10%), 10%)

  .page-nav
    .inner
      color desaturate(lighten($bg-color, 50%), 50%)
      border-top-color desaturate(lighten($bg-color, 10%), 10%)

  .sidebar
    background-color lighten($bg-color, 3%)
    border-right-color desaturate(lighten($bg-color, 10%), 10%)

    .nav-links
      border-bottom-color desaturate(lighten($bg-color, 10%), 10%)

    a.sidebar-link
      color desaturate(lighten($bg-color, 80%), 50%)

      &:hover,
      &:focus,
      &.active
        color #fff

    .sidebar-heading
      color desaturate(lighten($bg-color, 80%), 50%)

      &.open,
      &:hover
        color #fff

  .nav-links
    a
      color desaturate(lighten($bg-color, 80%), 50%)

      &:hover,
      &:focus,
      &.router-link-active
        color #fff

  .home
    .hero
      .description
        color lighten($bg-color, 50%) !important

      .action-button
        border 0

      .action-button[href^="/about"]
        background-color darken(#f40f1b, 20%) !important
        color white !important
        font-weight: bold

      .action-button[href^="/typescript"]
        background-color #3498db !important
        color white !important
        font-weight: bold

    .features,
    .footer
      border-top-color desaturate(lighten($bg-color, 10%), 10%)

    .feature
      h2
        color desaturate(lighten($bg-color, 70%), 40%)

      p
        color desaturate(lighten($bg-color, 50%), 50%)

    .footer
      color desaturate(lighten($bg-color, 50%), 50%)


  .box
    background-color lighten($bg-color, 3%) !important
    color lightgrey !important

    .tabs
      li.is-active > a
        color $accentColor
        font-weight bold
        border-bottom-color $accentColor

      li > a
        color antiquewhite


  .custom-block.warning
    color antiquewhite