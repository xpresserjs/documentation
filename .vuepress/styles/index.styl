@require 'dark.styl'

body
  font-family: 'PT Sans', sans-serif
  font-size 1.1em

code, .line-numbers-mode
  font-family: 'Fira Code', monospace;
  font-size 16px

h1, h2, h3
  font-weight lighter
  color #3eaf7c
  border-left-color #3eaf7c


img
  border-radius: 5px;

img[src*="#console"]
  background-color: #2D2A2E
  padding: 10px
  border-radius: 5px !important

