@require 'dark.styl';
$bg-color = darken(whitesmoke, 5%)
$link-green = darken(#3eaf7c, 10%)

html, html body
  background-color $bg-color;
  color: black

body
  font-family: 'PT Sans', sans-serif
  //font-weight: normal
  font-size 1.1em

a {
  //font-family sans-serif
}

.sidebar
  background-color #f5f5f5
  //border-right-color fade-out(lighten(black, 50%), 50%)

code, .line-number
  font-family: 'Fira Code', monospace;
  font-size 17px

table
  background-color white
  font-size 15px

.line-number
  line-height 1.65em

//font-size 1px !important

h1, h2, h3
  font-weight normal
  color $link-green
  border-left-color $link-green
  border-bottom-color: fade-out($link-green, 80%);

h4, h5, h6, strong
  color lighten(black, 15%);


img
  border-radius: 5px;

img[src*="#console"]
  background-color: #2D2A2E
  padding: 10px
  border-radius: 5px !important

